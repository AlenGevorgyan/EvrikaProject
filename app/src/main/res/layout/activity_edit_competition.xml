<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_orange_gradient"
    android:fitsSystemWindows="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Competition Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Competition Name -->



                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Competition Name"
                        app:hintTextColor="@color/colorPrimary"
                        app:boxStrokeColor="@color/colorPrimary"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Competition name"
                            android:textColorHint="@color/gray"
                            android:textColor="@color/black"
                            android:inputType="textPersonName"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Sport Type -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sport"
                        app:hintTextColor="@color/colorPrimary"
                        app:boxStrokeColor="@color/colorPrimary"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_marginBottom="16dp">
                        <AutoCompleteTextView
                            android:id="@+id/spinner_sport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Sport"
                            android:textColorHint="@color/gray"
                            android:textColor="@color/black"
                            android:inputType="none"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Competition Type -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:singleSelection="true"
                        app:selectionRequired="true">
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_public"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Public"
                            android:checked="true"
                            app:chipBackgroundColor="@color/colorPrimary"
                            android:textColor="@color/white"
                            app:chipStrokeColor="@color/colorPrimary"
                            app:chipStrokeWidth="2dp"
                            app:checkedIconVisible="false"/>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_private"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Private"
                            app:chipBackgroundColor="@color/colorPrimary"
                            android:textColor="@color/white"
                            app:chipStrokeColor="@color/colorPrimary"
                            app:chipStrokeWidth="2dp"
                            app:checkedIconVisible="false"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Date -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date"
                        app:hintTextColor="@color/colorPrimary"
                        app:boxStrokeColor="@color/colorPrimary"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select date"
                            android:textColorHint="@color/gray"
                            android:textColor="@color/black"
                            android:focusable="false"
                            android:clickable="true"
                            android:drawableStart="@drawable/ic_calendar"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Time -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Time"
                        app:hintTextColor="@color/colorPrimary"
                        app:boxStrokeColor="@color/colorPrimary"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select time"
                            android:textColorHint="@color/gray"
                            android:textColor="@color/black"
                            android:focusable="false"
                            android:clickable="true"
                            android:drawableStart="@drawable/ic_time"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Team Player Count -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Time"
                        app:hintTextColor="@color/colorPrimary"
                        app:boxStrokeColor="@color/colorPrimary"
                        app:boxStrokeWidth="2dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp">">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_team_player_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:hint="Team Player Count"
                            android:textColorHint="@color/gray"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Requests Container for private games -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:id="@+id/requests_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="@android:color/transparent" />
            </androidx.cardview.widget.CardView>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Save Changes"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:elevation="8dp"
                    app:icon="@drawable/ic_add"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Delete"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/logout"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:elevation="8dp"
                    app:icon="@drawable/ic_logout"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout> 